APP_NAME=Molunzaka
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# Database Configuration
# For development: use SQLite locally in Codespaces
DB_CONNECTION=sqlite
DB_DATABASE=/app/database/database.sqlite

# For PostgreSQL (production/Docker):
# DB_CONNECTION=pgsql
# DB_HOST=db
# DB_PORT=5432
# DB_DATABASE=molunzaka
# DB_USERNAME=molunzaka
# DB_PASSWORD=secret

# Cache & Queue
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CLIENT=phpredis

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 / S3-compatible Storage (Minio, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=molunzaka-storage
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# File Storage Configuration
FILESYSTEM_DISK=local
FILESYSTEM_VISIBILITY=public

# FFmpeg Configuration
FFMPEG_TIMEOUT=3600
HLS_SEGMENT_DURATION=10
HLS_SEGMENT_COUNT=10

# Sanctum (API Authentication)
SANCTUM_STATEFUL_DOMAINS=localhost:8000,127.0.0.1:8000

# Filament Configuration
FILAMENT_PATH=/admin

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
